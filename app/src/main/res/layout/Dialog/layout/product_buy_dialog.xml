<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cstLayout"
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:background="@drawable/product_buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/finish"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/nav_ic_delete" />


        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="42dp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_face3" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="众信科技"
            android:textColor="#ff232323"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_icon"
            app:layout_constraintStart_toEndOf="@+id/image_icon"
            app:layout_constraintTop_toTopOf="@+id/image_icon" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:text="3分钟前"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />

        <TextView
            android:id="@+id/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="1dp"
            android:padding="0dp"
            android:text="收藏"
            android:textColor="#ffff8f43"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_collection"
            app:layout_constraintTop_toTopOf="@+id/image_collection" />

        <ImageView
            android:id="@+id/image_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time"
            app:layout_constraintStart_toEndOf="@+id/tv_time"
            app:layout_constraintTop_toTopOf="@+id/tv_time"
            app:srcCompat="@mipmap/ic_collect_orange_micro" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="84dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/customized"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/item"
            android:gravity="center"
            android:text="定制"
            android:textColor="#ffff8f43"
            android:textSize="11sp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/posts"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/item"
            android:gravity="center"
            android:text="现货"
            android:textColor="#ffff8f43"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/customized"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/promotion"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/item"
            android:gravity="center"
            android:text="促销"
            android:textColor="#ffff8f43"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/posts"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/sample"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/item"
            android:gravity="center"
            android:text="样品"
            android:textColor="#ffff8f43"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/promotion"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="                                           图片上的印花来一份图片上的印花来一份图片体上XXXXXXXXXXXXXXX"
            android:textColor="#ff232323"
            android:textSize="15sp"
            android:gravity="left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/qtyUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="需要数量: 30000套"
            android:textColor="#ff238efa"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/deliveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:text="交货时间: 2019/05/12"
            android:textColor="#ff238efa"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/qtyUnit"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="47dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_bottom"
            app:srcCompat="@mipmap/ic_call_micro_blue" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/tv_phone"
            app:layout_constraintLeft_toRightOf="@+id/tv_phone"
            app:layout_constraintTop_toTopOf="@+id/tv_phone"
            app:srcCompat="@mipmap/ic_negotiate_micro" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="拨打"
            android:textColor="#ff238efa"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_phone"
            app:layout_constraintStart_toEndOf="@+id/image_phone"
            app:layout_constraintTop_toTopOf="@+id/image_phone" />

        <TextView
            android:id="@+id/TV_mircro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="洽谈"
            android:textColor="#ff238efa"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <TextView
            android:id="@+id/get"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="马上接单"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_bottom" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="3dp"
            android:text="3人已报价"
            android:textColor="#ff999999"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/divider_bottom"
            app:layout_constraintStart_toEndOf="@+id/im_money" />

        <ImageView
            android:id="@+id/im_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/divider_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_list_the_price" />

        <GridView
            android:id="@+id/dynamic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="96dp"
            android:numColumns="3"
            android:columnWidth="10dp"
            app:layout_constraintBottom_toTopOf="@+id/divider_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>