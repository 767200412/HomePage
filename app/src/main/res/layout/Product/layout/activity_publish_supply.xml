<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.productPage.PublishSupplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/nav_ic_arrow_b" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="发布供应产品"
                android:textColor="#ff232323"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="43dp"
                android:background="#ffe3e3e3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:background="@null"
                android:gravity="left"
                android:hint="请填写供应产品信息，如：名称、数量、单位、价格、优势等"
                android:textColor="#ff232323"
                android:textSize="14sp"
                android:maxLength = "200"
                app:layout_constraintBottom_toTopOf="@+id/divider2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="163dp"
                android:background="#ffe3e3e3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:text="产品图片"
                android:textColor="#ff232323"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />
            <!--展示上传的图片-->
            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:columnWidth="60dp"
                android:horizontalSpacing="15dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_image" />

            <TextView
                android:id="@+id/photo_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="(0/9)"
                android:textColor="#ff999999"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

            <TextView
                android:id="@+id/text_number"
                android:layout_width="51dp"
                android:layout_height="17dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:text="（0/200)"
                android:textColor="#ff999999"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/divider2"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/classification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="产品分类"
                android:textColor="#ff232323"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/supplyChainTypes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="供应链类型"
                android:textColor="#ff232323"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/classification" />

            <ImageView
                android:id="@+id/more2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/supplyChainTypes"
                app:layout_constraintTop_toTopOf="@+id/supplyChainTypes"
                app:srcCompat="@mipmap/ic_arrow_left_small" />

            <TextView
                android:id="@+id/typesOfSupply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="供应类型"
                android:textColor="#ff232323"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/supplyChainTypes" />

            <TextView
                android:id="@+id/show2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:text="请选择"
                android:textColor="#ff999999"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/supplyChainTypes"
                app:layout_constraintTop_toBottomOf="@+id/classification" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/classification"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_arrow_left_small" />

            <TextView
                android:id="@+id/show1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:text="请选择"
                android:textColor="#ff999999"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Customized"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/item2"
                android:gravity="center"
                android:text="定制"
                android:textColor="#ff666666"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/posts" />

            <TextView
                android:id="@+id/promotion"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/item2"
                android:gravity="center"
                android:text="促销"
                android:textColor="#ff666666"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/typesOfSupply" />

            <TextView
                android:id="@+id/sample"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/item2"
                android:gravity="center"
                android:text="样品"
                android:textColor="#ff666666"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/promotion" />

            <TextView
                android:id="@+id/posts"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/item2"
                android:gravity="center"
                android:text="现货"
                android:textColor="#ff666666"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sample" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:background="#ffe3e3e3"
                app:layout_constraintBottom_toTopOf="@+id/supplyChainTypes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classification" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:background="#ffe3e3e3"
                app:layout_constraintBottom_toTopOf="@+id/typesOfSupply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/supplyChainTypes" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:text="立即发布"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/btn_shape_normal"/>
    </LinearLayout>



</LinearLayout>